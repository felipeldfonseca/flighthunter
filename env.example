# Notifications
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=alerts@flighthunter.app

TELEGRAM_BOT_TOKEN=your-telegram-bot-token

# Stripe
STRIPE_SECRET_KEY=your-stripe-secret-key
